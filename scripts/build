#!/bin/bash
set -e

cd $(dirname $0)/..

ARCH=${ARCH:?"ARCH not set"}
AESNI=""
[ "${ARCH}" == "amd64" ] && AESNI="--enable-aesni"

./configure --enable-gcm ${AESNI} && make -j$(nproc) && make install

cd /usr/local
mv libexec/ipsec/charon sbin
